# EdgeOrchestra Configuration
# Copy to .env and adjust values

# Database
EO_DATABASE_URL=postgresql+asyncpg://edgeorchestra:edgeorchestra@localhost:5432/edgeorchestra

# Redis
EO_REDIS_URL=redis://localhost:6379/0

# API
EO_API_HOST=0.0.0.0
EO_API_PORT=8000

# gRPC
EO_GRPC_HOST=0.0.0.0
EO_GRPC_PORT=50051

# mDNS
EO_MDNS_ENABLED=true
EO_MDNS_SERVICE_NAME=EdgeOrchestra

# Heartbeat
EO_HEARTBEAT_INTERVAL_SECONDS=30
EO_HEARTBEAT_TIMEOUT_MULTIPLIER=3

# Logging
EO_LOG_LEVEL=INFO
EO_LOG_FORMAT=json
